{{#if this.node}}
  <div ...attributes class="flex">
    <div class="w-full p-1 bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700">
      <h5 class="mb-2 text-md font-medium tracking-tight text-gray-900 dark:text-white">{{this.nodeAttributes.name}}</h5>
      <ul class="mb-3 font-normal text-gray-500 dark:text-gray-400">
        {{#if this.isOrg}}
          <li>ShortName: {{this.nodeAttributes.shortName}}</li>
          <li>City: {{this.nodeAttributes.city}}</li>
          <li>Country: {{this.nodeAttributes.country}}</li>
          <li>URL: <a href={{this.nodeAttributes.organizationURL}} target="_blank" class="inline-flex items-center text-blue-600 hover:underline" rel="noopener noreferrer">
          {{this.nodeAttributes.organizationURL}}<svg class="ml-2 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z"></path><path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z"></path></svg>
            </a>
          </li>
        {{else}}
          {{#each-in this.nodeAttributes as |key value|}}
            <li>{{key}}: {{value}}</li>
          {{/each-in}}
        {{/if}}
      </ul>
    </div> 
 </div>
{{/if}}
