<nav class="bg-white border-gray-200 px-2 py-1.5 dark:bg-gray-900">
  <div class="flex flex-wrap justify-between items-center mx-auto">
    <div class="flex w-2/3">
      <form class="w-full">   
        <label for="default-search" class="mb-2 text-sm font-medium text-gray-900 sr-only dark:text-gray-300">Search</label>
        <div class="relative flex">
          <div class="flex items-center px-1 pointer-events-none">
            <svg aria-hidden="true" class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
          <PowerSelect
            @placeholder="Search..."
            @searchEnabled={{true}}
            @allowClear={{true}}
            @search={{this.renderService.searchResults}}
            @selected={{this.renderService.selectedNode}}
            class="flex-1 w-full p-2 text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
            @onChange={{fn (mut this.renderService.selectedNode)}} as |element|>
            {{element.name}}
          </PowerSelect>
        </div>
      </form>
    </div>
    <div class="relative">
      <button type="button" class=" px-6 pt-2.5 pb-2 bg-gray-300 text-black font-medium text-xs leading-normal uppercase rounded shadow-md hover:bg-blue-500 hover:shadow-lg focus:bg-blue-500 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-600 active:shadow-lg transition duration-150 ease-in-out flex align-center" {{on "click" this.logout}}>Logout
      <svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="sign-out" class="svg-inline--fa fa-sign-out w-4 ml-2" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
        <path d="M497 273L329 441c-15 15-41 4.5-41-17v-96H152c-13.3 0-24-10.7-24-24v-96c0-13.3 10.7-24 24-24h136V88c0-21.4 25.9-32 41-17l168 168c9.3 9.4 9.3 24.6 0 34zM192 436v-40c0-6.6-5.4-12-12-12H96c-17.7 0-32-14.3-32-32V160c0-17.7 14.3-32 32-32h84c6.6 0 12-5.4 12-12V76c0-6.6-5.4-12-12-12H96c-53 0-96 43-96 96v192c0 53 43 96 96 96h84c6.6 0 12-5.4 12-12z"/>
      </svg>
      </button>
    </div>
  </div>
</nav>
